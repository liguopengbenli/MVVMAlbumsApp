<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_album"
    app:startDestination="@id/albumFragmentNav">

    <fragment
        android:id="@+id/albumFragmentNav"
        android:name="com.lig.intermediate.mvvmalbumsapp.features.album.AlbumFragment"
        android:label="fragment_albums"
        tools:layout="@layout/fragment_albums" >
        <action
            android:id="@+id/action_albumFragmentNav_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.lig.intermediate.mvvmalbumsapp.features.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="annonce"
            app:argType="com.lig.intermediate.mvvmalbumsapp.data.Annonce" />
    </fragment>
</navigation>