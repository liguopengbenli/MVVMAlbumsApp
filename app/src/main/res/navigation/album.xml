<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.lig.intermediate.mvvmalbumsapp.features.album.AlbumFragment"
        android:label="@string/title_album"
        tools:layout="@layout/fragment_albums">
        <action
            android:id="@+id/action_albumFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.lig.intermediate.mvvmalbumsapp.features.details.DetailsFragment"
        android:label="@string/detail"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="annonce"
            app:argType="com.lig.intermediate.mvvmalbumsapp.data.Annonce" />
    </fragment>
</navigation>